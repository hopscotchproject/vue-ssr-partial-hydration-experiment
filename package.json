{
  "name": "vue-ssr-partial-hydration-experiment",
  "version": "0.0.1",
  "description": "Experimental project to explore partial hydration with Vue SSR",
  "scripts": {
    "start:proxy": "nodemon ./mockLegacyServer.js",
    "start:helper-server": "node ./src/helper-server.js",
    "start:demo": "run-p start start:proxy",
    "dev": "run-s clean build:client:dev build:server:dev && cross-env NODE_ENV=development run-p watch:client watch:server start start:proxy start:helper-server",
    "watch:client": "webpack-dev-server --config webpack.client.config.js",
    "watch:server": "webpack -w --config ./webpack.server.config.js",
    "build:client:dev": "cross-env NODE_ENV=development webpack --config ./webpack.client.config.js",
    "build:server:dev": "cross-env NODE_ENV=development webpack --config ./webpack.server.config.js",
    "build:client": "cross-env NODE_ENV=production webpack --config ./webpack.client.config.js",
    "build:server": "cross-env NODE_ENV=production webpack --config ./webpack.server.config.js",
    "build": "run-s clean build:client build:server",
    "start": "nodemon ./src/server.js",
    "clean": "rm -rf dist"
  },
  "author": "@floydding",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.2",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "vue-hot-reload-api": "^2.3.4",
    "vue-loader": "^17.0.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash.get": "^4.4.2",
    "uuid": "^8.1.0",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vue-server-renderer": "^2.6.11",
    "vuex": "^3.4.0",
    "vuex-router-sync": "^5.0.0"
  }
}
